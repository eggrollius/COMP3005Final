<%- include('header') %>

<main>
    <section>
        <h2>Trainer Login</h2>
        <form id="trainerLoginForm">
            <input type="number" name="trainerId" placeholder="Trainer ID" required>
            <input type="password" name="password" placeholder="Password" required>
            <button type="submit">Login</button>
        </form>
    </section>

    <section id="availabilitySection" style="display:none;">
        <h2>Manage Availability</h2>
        <div id="availabilityList"></div>
        <h3>Add New Availability</h3>
        <form id="addAvailabilityForm">
            <input type="datetime-local" name="availableFrom" required>
            <input type="datetime-local" name="availableTo" required>
            <button type="submit">Add Availability</button>
        </form>
    </section>

    <section>
        <h2>Search Member Profiles</h2>
        <form id="searchMemberForm">
            <input type="text" name="memberName" placeholder="Enter member name" required>
            <button type="submit">Search</button>
        </form>
        <div id="memberResults"></div>
    </section>
</main>

<%- include('footer') %>
<script src="/js/trainerSchedule.js"></script>
<script src="/js/searchMembers.js"></script>
